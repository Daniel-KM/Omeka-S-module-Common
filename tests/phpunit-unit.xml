<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         bootstrap="bootstrap-unit.php"
         colors="true"
         backupGlobals="false"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
    <coverage>
        <include>
            <directory suffix=".php">../src</directory>
        </include>
        <exclude>
            <directory suffix=".php">../src/Service</directory>
        </exclude>
    </coverage>
    <testsuites>
        <testsuite name="Common Unit Tests">
            <directory>./CommonTest/Stdlib</directory>
            <directory>./CommonTest/View</directory>
            <directory>./CommonTest/Validator</directory>
            <exclude>./CommonTest/Stdlib/EasyMetaTest.php</exclude>
        </testsuite>
    </testsuites>
</phpunit>
